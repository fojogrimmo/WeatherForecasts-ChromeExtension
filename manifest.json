{
  "manifest_version": 3,
  "name": "Pomodoro Time Tracker",
  "version": "1.0",
  "description": "Stay focused: track your time using Pomodoro Technique!",
  "action": {
    "default_popup": "html/popup.html",
    "default-icon": "icons/icon.png"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": "content.js"
    }
  ],
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  }
}
