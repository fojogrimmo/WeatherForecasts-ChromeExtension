{
  "manifest_version": 3,
  "name": "Weather Forecasts",
  "version": "1.0",
  "description": "Check the weather forecast right in your browser!",
  "action": {
    "default_popup": "html/popup.html",
    "default-icon": "icons/icons/icon-128.png"
  },
  "host_permissions": ["https://www.weatherapi.com/*"],
  "icons": {
    "16": "images/icons/icon-16.png",
    "32": "images/icons/icon-32.png",
    "48": "images/icons/icon-48.png",
    "128": "images/icons/icon-128.png"
  }
}
